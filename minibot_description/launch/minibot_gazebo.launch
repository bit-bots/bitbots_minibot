<launch>

  <param name="robot_description" textfile="$(find minibot_description)/urdf/minibot.urdf" />  

  <include file="$(find gazebo_ros)/launch/empty_world.launch">
    <arg name="world_name" value="worlds/empty.world"/>
    <arg name="paused" value="true"/>
  </include>
  
  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-file $(find minibot_description)/urdf/minibot.urdf -urdf -model minibot -z 0.0" />


  <include file="$(find minibot_description)/launch/minibot_control.launch"/> 

</launch>
